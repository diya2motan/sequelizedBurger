

<div class="page-header">
  <h1>Eat Burgers!</h1>
</div>

<div class="row">
  <div class="col-md-6 undevoured">
  <h2>Burgers You have!</h2>
  <ol>
    {{#each burgers}}
      {{#unless this.devoured}}
        <li>
          {{this.burger_name}}
          <form action="/{{this.id}}?_method=PUT" method="POST">
            <input type="hidden" name="devoured" value="true">
            <button class="submit" type="submit">Devoure!</button>
          </form>
        </li>
      {{/unless}}
    {{/each}}
  </ol>
  </div>

  

  <div class="col-md-6 devoured">
  <h2>Burgers that are devoured!</h2>
  <ol>
    {{#each burgers}}
      {{#if this.devoured}}
        <li>
          {{this.burger_name}}
        </li>
      {{/if}}
    {{/each}}
  </ol>
  </div>
</div>

<div class="row add-burger">
  <h2>Add a Burger</h2>
  <form class="create-update-form" action="/" method="POST">

    <div class="form-group">
      <label for="ca">Burger Name:</label>
      <input class="text" type="text" id="ca" name="burger_name">
    </div>


    <button class="submit" type="submit">Add Burger</button>
  </form>
</div>
